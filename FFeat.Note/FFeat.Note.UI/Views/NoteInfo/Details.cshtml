@model FFeat.Note.Model.NoteInfo

@{
    ViewBag.Title = "Details";
}
<div class="container" id="page-content">

    <a href="/home/index" class="site-brand"><img src="~/images/logo.png" alt=""></a>

    <h2>文章</h2>

    <div>
        <h4>详细信息</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                文章名：
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NoteName)
            </dd>
            <dt>
                作者：
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserInfo.UserName)
            </dd>
            <dt>
                文章类别：
            </dt>

            <dd>
                @{
                    var str = (FFeat.Note.Model.EnumNote.NoteTypeEnum)Enum.ToObject(typeof(FFeat.Note.Model.EnumNote.NoteTypeEnum), Model.NoteType);
                    str.ToString();
                }
                @Html.DisplayFor(modelItem => str)
                @*@Html.DisplayFor(model => model.NoteType)*@
            </dd>
            <dt>
                修改时间：
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SubTime)
            </dd>

            <dt>
                文章内容：
            </dt>

            <dd>
                @Html.Raw(Model.SubContent)
            </dd>





        </dl>
    </div>
    <p>
        @Html.ActionLink("编辑", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("返回列表", "Index")
    </p>
</div>